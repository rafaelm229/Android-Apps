            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/result_text"
            app:layout_constraintStart_toStartOf="@id/card_result_text_emoji"
            app:layout_constraintEnd_toEndOf="@id/card_result_text_emoji"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Button Calculate Again -->
    <Button
        android:id="@+id/user_calculate_button"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:text="Calcular"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/card_result"
        app:layout_constraintStart_toStartOf="@id/card_result"
        app:layout_constraintEnd_toEndOf="@id/card_result"/>

</androidx.constraintlayout.widget.ConstraintLayout>