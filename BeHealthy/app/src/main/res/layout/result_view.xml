            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Result Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_result"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/white"
        android:padding="14dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_nav">

        <!-- Emoji Text -->
        <TextView
            android:id="@+id/card_result_text_emoji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ðŸ˜Š"
            android:textColor="@android:color/black"
            android:textSize="100sp"
            android:textStyle="normal"
           android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Result Text -->
        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24.2 kg/m2"
            android:textSize="32dp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/card_result_text_emoji"
            app:layout_constraintEnd_toEndOf="@+id/card_result_text_emoji"
            app:layout_constraintStart_toStartOf="@id/card_result_text_emoji"/>

        <!-- Info Text -->
        <TextView
            android:id="@+id/result_health_info_text"
